<div id="loginBox" class="w-4/5 h-fit bg-custom-blue z-10 absolute top-1/2 left-1/2 translate-x-[-50%] translate-y-[-50%] rounded-lg outline outline-offset-[-4px] hidden">
  <form action="/login" method="post" class="m-4">
    <h3 class="text-2xl">Username</h3>
    <input type="text" name="username" class="w-full text-lg h-8 focus:outline-none pl-1 rounded">

    <h3 class="text-2xl mt-4">Password</h3>
    <input type="password" name="password" class="w-full text-lg h-8 focus:outline-none pl-1 rounded">

    {{#if showIsWrong}}
    <p class="text-red-600 text-xs">Username or password is wrong.</p>
    {{/if}}

    <input type="submit" value="Login" class="w-full text-lg bg-custom-second-blue mt-4 py-1 rounded text-white">

    <a href="/signup" class="text-blue-600">Sign up instead</a>
  </form>
</div>

<script src="/js/loginOrOut.js" defer></script>